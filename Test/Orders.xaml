<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Test.Orders"
             Title="Orders">

    <Grid RowDefinitions="Auto,*">

        <!-- Header -->
        <StackLayout Padding="10" Orientation="Horizontal">
            <ImageButton Source="back_icon.png" WidthRequest="30" HeightRequest="30"
                         Clicked="OnBackClicked"/>
            <Label Text="ORDER" FontSize="20" FontAttributes="Bold"
                   HorizontalOptions="CenterAndExpand"/>
        </StackLayout>

        <!-- Order Items List -->
        <CollectionView Grid.Row="1" ItemsSource="{Binding OrderItems}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" ColumnDefinitions="Auto,*,Auto">
                        <Image Source="{Binding Image}" WidthRequest="50" HeightRequest="50"/>
                        <StackLayout Grid.Column="1" Padding="10,0,0,0">
                            <Label Text="{Binding Name}" FontAttributes="Bold"/>
                            <Label Text="{Binding Price, StringFormat='${0:F2}'}" 
                                   FontSize="12" TextColor="Gray"/>
                        </StackLayout>
                        <Label Grid.Column="2" Text="{Binding TotalPrice, StringFormat='${0:F2}'}"
                               FontSize="14" FontAttributes="Bold" TextColor="Blue"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Bottom Section (Checkout & Place Order) -->
        <StackLayout Padding="10" BackgroundColor="White">
            <Grid ColumnDefinitions="*,Auto">
                <Label Text="Total: " FontSize="18"/>
                <Label Text="{Binding TotalAmount, StringFormat='${0:F2}'}"
                       FontSize="18" FontAttributes="Bold" TextColor="Black"
                       Grid.Column="1"/>
            </Grid>
            <Button Text="Place Order" BackgroundColor="Black" TextColor="White"
                    FontSize="18" Clicked="OnPlaceOrderClicked"/>
        </StackLayout>

    </Grid>
</ContentPage>
